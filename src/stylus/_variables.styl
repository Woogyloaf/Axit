@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,300italic,600,700");

//LAYOUT
$desktop = 768px

// TYPOGRAPHY
$font-family-title = "Roboto", sans-serif
$font-family-primary = "Roboto", sans-serif

$font-montserrat = 'Montserrat', sans-serif;
$font-roboto = 'Roboto', sans-serif;
$font-raleway = 'Raleway', sans-serif;
$font-open-sans = 'Open Sans', sans-serif;
// "Helvetica Neue",Helvetica,Arial,sans-serif

$body-text = #333333
$font_mono = 10px "Monaco", monospace
$font-weight-title = 400
$font-weight-body = 300

$font-size = 100%
$font-size-mobile = 100%
$font-size-code = 90%
$line-height = 1.625
$line-height-mobile = 1.625

// COLORS
$color1 = #5bc0de
// blue
$color2 = #9cbe26
// green
$success = #5cb85c
// green
$info = #5bc0de
// blue
$warning = #f0ad4e
// orange
$danger = #d9534f
//red
$white = white
$black = #3a3a3a
$grey = #cccccc
$grey-light = lighten($grey, 16%)
$grey-dark = darken($grey, 20%)
// COLORS: Links
$link_color = $color1
$link_hover = darken($color1, 20%)
// COLORS: Buttons
$button-color = $color1
$button-color-hover = darken($button-color, 10%)
$button-color-disabled = $button-color

// AXIT COLORS

$grey-light = #f5f5f5
$orange = #ffa500